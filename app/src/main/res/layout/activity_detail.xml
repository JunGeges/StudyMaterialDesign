<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jensen.studymaterialdesign.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:navigationIcon="@drawable/back_navigation"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/tool_bar_menu_text_theme"
        >

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_detail_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_below="@+id/detail_tool_bar"
        />

</RelativeLayout>
